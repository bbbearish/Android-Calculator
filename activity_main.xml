<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.calc.elad.mycalculator.MainActivity"
    android:background="#1105f9"
    
    android:padding="0dp"
    android:clickable="true"
    android:importantForAccessibility="auto"
    android:layoutMode="opticalBounds"
    android:longClickable="true"
    android:visibility="visible">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bearish Calculator"
        android:id="@+id/textView"
        android:background="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center"
        android:textSize="50dp"
        android:minLines="2"
        android:minHeight="17dp"
        android:textColor="#08ace3" />

    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text="7"
        android:id="@+id/btn7"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#655b5b"
        android:onClick="onClickNumber"
        android:maxWidth="90dp" />

    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text="8"
        android:id="@+id/btn8"
        android:padding="0dp"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#655b5b"
        android:layout_alignTop="@+id/btn7"
        android:layout_toRightOf="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:onClick="onClickNumber"
        android:maxWidth="90dp" />

    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text="9"
        android:id="@+id/btn9"
        android:padding="0dp"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#655b5b"
        android:layout_alignTop="@+id/btn8"
        android:layout_toRightOf="@+id/btn8"
        android:layout_toEndOf="@+id/btn8"
        android:onClick="onClickNumber"
        android:maxWidth="90dp" />

    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text="4"
        android:id="@+id/btn4"
        android:padding="0dp"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#655b5b"
        android:layout_below="@+id/btn7"
        android:layout_alignLeft="@+id/btn7"
        android:layout_alignStart="@+id/btn7"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text="5"
        android:id="@+id/btn5"
        android:padding="0dp"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#655b5b"
        android:layout_below="@+id/btn7"
        android:layout_toRightOf="@+id/btn4"
        android:layout_toEndOf="@+id/btn4"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text="6"
        android:id="@+id/btn6"
        android:padding="0dp"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#655b5b"
        android:layout_below="@+id/btn8"
        android:layout_toRightOf="@+id/btn8"
        android:layout_toEndOf="@+id/btn8"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text="1"
        android:id="@+id/btn1"
        android:padding="0dp"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#655b5b"
        android:layout_below="@+id/btn4"
        android:layout_alignLeft="@+id/btn4"
        android:layout_alignStart="@+id/btn4"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text="2"
        android:id="@+id/btn2"
        android:padding="0dp"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#655b5b"
        android:layout_alignTop="@+id/btn1"
        android:layout_toRightOf="@+id/btn1"
        android:layout_toEndOf="@+id/btn1"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text="3"
        android:id="@+id/btn3"
        android:padding="0dp"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#655b5b"
        android:layout_alignTop="@+id/btn2"
        android:layout_toRightOf="@+id/btn2"
        android:layout_toEndOf="@+id/btn2"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text="C"
        android:id="@+id/btnClear"
        android:padding="0dp"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#655b5b"
        android:layout_below="@+id/btn1"
        android:layout_alignLeft="@+id/btn1"
        android:layout_alignStart="@+id/btn1"
        android:onClick="onClickClear" />

    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text="0"
        android:id="@+id/btn0"
        android:padding="0dp"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#655b5b"
        android:layout_alignTop="@+id/btnClear"
        android:layout_toRightOf="@+id/btnClear"
        android:layout_toEndOf="@+id/btnClear"
        android:onClick="onClickNumber" />

    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text="="
        android:id="@+id/btnEquals"
        android:padding="0dp"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#655b5b"
        android:layout_below="@+id/btn2"
        android:layout_toRightOf="@+id/btn2"
        android:layout_toEndOf="@+id/btn2"
        android:onClick="onClickEqual" />

    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text="+"
        android:id="@+id/btnPlus"
        android:padding="0dp"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#655b5b"
        android:layout_alignTop="@+id/btn9"
        android:layout_toRightOf="@+id/btn9"
        android:layout_toEndOf="@+id/btn9"
        android:onClick="onClickOperator"
        android:maxWidth="90dp" />

    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text="-"
        android:id="@+id/btnMinus"
        android:padding="0dp"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#655b5b"
        android:layout_below="@+id/btnPlus"
        android:layout_toRightOf="@+id/btn9"
        android:onClick="onClickOperator" />

    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text="x"
        android:id="@+id/btnMulty"
        android:padding="0dp"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#655b5b"
        android:layout_below="@+id/btnMinus"
        android:layout_toRightOf="@+id/btn9"
        android:onClick="onClickOperator" />

    <Button
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text="/"
        android:id="@+id/btnDiv"
        android:padding="0dp"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:background="#655b5b"
        android:layout_below="@+id/btnMulty"
        android:layout_toRightOf="@+id/btn9"
        android:onClick="onClickOperator" />
</RelativeLayout>
